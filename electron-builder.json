{
    "productName": "IPTVnator",
    "directories": {
        "output": "release/"
    },
    "files": [
        "**/*",
        "!**/*.ts",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!src/",
        "!e2e/",
        "!hooks/",
        "!angular.json",
        "!tsconfig.json",
        "!tslint.json"
    ],
    "win": {
        "icon": "build/assets/icons",
        "compression": "maximum",
        "target": [
            {
                "target": "nsis",
                "arch": ["ia32", "x64"]
            }
        ]
    },
    "mac": {
        "icon": "build/assets/icons/icon-1024.png",
        "target": {
            "target": "dmg",
            "arch": ["universal"]
        }
    },
    "linux": {
        "icon": "build/assets/icons",
        "category": "Video",
        "target": [
            {
                "target": "AppImage",
                "arch": ["x64", "armv7l", "arm64"]
            },
            {
                "target": "deb",
                "arch": ["x64", "armv7l", "arm64"]
            },
            {
                "target": "rpm",
                "arch": ["x64", "arm64", "armv7l"]
            },
            {
                "target": "Snap",
                "arch": ["x64", "arm64", "armv7l"]
            }
        ]
    }
}
