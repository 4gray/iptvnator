{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "enables the default permissions",
    "windows": ["main"],
    "permissions": [
        "core:default",
        {
            "identifier": "shell:allow-execute",
            "allow": [
                {
                    "args": true,
                    "cmd": "mpv",
                    "name": "mpv",
                    "sidecar": false
                }
            ]
        },
        {
            "identifier": "http:default",
            "allow": [
                {
                    "url": "http://**"
                },
                {
                    "url": "https://**"
                },
                {
                    "url": "http://**:**"
                },
                {
                    "url": "https://*:**"
                }
            ]
        },
        "http:default",
        "window-state:default",
        "os:default",
        "fs:default",
        "updater:default",
        "dialog:default",
        "process:default",
        "core:window:allow-set-fullscreen"
    ]
}
