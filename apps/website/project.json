{
  "name": "website",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/website/src",
  "tags": ["type:website"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/apps/website"],
      "inputs": ["production", "^production"],
      "options": {
        "command": "pnpm exec astro build",
        "cwd": "apps/website"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec astro dev --port 4321",
        "cwd": "apps/website"
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "pnpm exec astro preview --port 4322",
        "cwd": "apps/website"
      }
    }
  }
}
