{
    "name": "electron-backend",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/electron-backend/src",
    "projectType": "application",
    "targets": {
        "build": {
            "dependsOn": [
                {
                    "projects": ["web", "remote-control-web"],
                    "target": "build"
                }
            ],
            "executor": "nx-electron:build",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/apps/electron-backend",
                "main": "apps/electron-backend/src/main.ts",
                "tsConfig": "apps/electron-backend/tsconfig.app.json",
                "assets": [
                    "apps/electron-backend/src/assets",
                    {
                        "input": "apps/electron-backend/src/app/workers",
                        "glob": "*.worker.ts",
                        "output": "workers"
                    }
                ],
                "additionalEntryPoints": [
                    {
                        "entryName": "workers/epg-parser.worker",
                        "entryPath": "apps/electron-backend/src/app/workers/epg-parser.worker.ts"
                    }
                ]
            },
            "configurations": {
                "production": {
                    "optimization": true,
                    "extractLicenses": true,
                    "inspect": false,
                    "fileReplacements": [
                        {
                            "replace": "apps/electron-backend/src/environments/environment.ts",
                            "with": "apps/electron-backend/src/environments/environment.prod.ts"
                        }
                    ]
                }
            }
        },
        "serve": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "nx run web:serve",
                    "nx run electron-backend:serve-electron"
                ]
            }

        },
        "serve-electron": {
            "executor": "nx-electron:execute",
            "options": {
                "buildTarget": "electron-backend:build"
            }
        },
        "package": {
            "dependsOn": ["electron-backend:build"],
            "executor": "nx-electron:package",
            "options": {
                "name": "electron-backend",
                "frontendProject": "web",
                "sourcePath": "dist/apps",
                "outputPath": "dist/packages",
                "prepackageOnly": true
            }
        },
        "make": {
            "dependsOn": ["electron-backend:build"],
            "executor": "nx-electron:make",
            "options": {
                "name": "electron-backend",
                "frontendProject": "web",
                "sourcePath": "dist/apps",
                "outputPath": "dist/executables"
            }
        },
        "lint": {
            "command": "eslint apps/electron-backend/**/*.ts"
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "apps/electron-backend/jest.config.ts"
            }
        }
    }
}
